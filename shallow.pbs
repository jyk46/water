#!/bin/sh -l

#PBS -l nodes=1:ppn=24
#PBS -l walltime=0:30:00
#PBS -N shallow
#PBS -j oe

# if not called with SIZE=???, set to 200
DISPATCH_SIZE=${SIZE:-200}

# type can be dam_break, pnd, river, or wave
DISPATCH_TYPE=${TYPE:-dam_break}

module load cs5220
cd $PBS_O_WORKDIR
./shallow -i $TYPE -o $(TYPE).out -n $DISPATCH_SIZE
